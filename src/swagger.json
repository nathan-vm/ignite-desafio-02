{
  "openapi": "3.0.0",
  "info": {
    "title": "User API Documentation",
    "description": "This is a User API",
    "version": "1.0.0",
    "contact": {
      "email": "nathan.v.marcelino@gmail.com"
    }
  },
  "tags": [
    {
      "name": "Users",
      "description": "Gerenciamento de usu√°rios"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "johndoe@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "604f863a-c12e-4f3f-a310-1ff278391f47",
                    "admin": false,
                    "created_at": "2021-09-18T18:21:00.076Z",
                    "updated_at": "2021-09-18T18:21:00.076Z",
                    "name": "John Doe",
                    "email": "johndoe@example.com"
                  }
                }
              }
            }
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "user already exist"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Return all users",
        "description": "Only user `admin` can access",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    },
                    "example": [
                      {
                        "id": "e88b802d-5525-43ef-9131-5fa88186353b",
                        "admin": true,
                        "created_at": "2021-09-18T19:08:05.038Z",
                        "updated_at": "2021-09-18T19:08:05.038Z",
                        "name": "John Doe",
                        "email": "johndoe@test.com"
                      },
                      {
                        "id": "831fddc3-1fa8-4721-9a49-a5557fa3b52f",
                        "admin": false,
                        "created_at": "2021-09-18T19:07:30.949Z",
                        "updated_at": "2021-09-18T19:07:30.949Z",
                        "name": "Foo Bar",
                        "email": "fooBar@test.com"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "Without permission",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "Not a admin user."
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Return one specific user",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "User ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                    "name": "John Doe",
                    "email": "johndoe@test.com",
                    "created_at": "2021-09-18T19:08:05.038Z",
                    "updated_at": "2021-09-18T19:08:05.038Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Turn the user in ADM",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "e88b802d-5525-43ef-9131-5fa88186353b",
                    "admin": true,
                    "created_at": "2021-09-18T19:08:05.038Z",
                    "updated_at": "2021-09-18T19:08:05.038Z",
                    "name": "John Doe",
                    "email": "johndoe@test.com"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}